<main>
<div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: " preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="5%" y="50%" fill="#eceeef" dy=".3em">
          
             
              Description:
              <%= film.description %>

            </text></svg>
            <div class="card-body">
              <p class="card-text"><p>
              <strong>Title:</strong>
              <%= film.title %>
              </p></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">  <%= link_to "Back", films_path %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><p>
      <%= link_to "Review", film %>
    </p></button>
                </div>
              <small class="text-body-secondary"> <p>
              <strong>Author:</strong>
              <%= film.author %>
              </p></small>

              <small class="text-body-secondary"> <p>
              <strong>Year:</strong>
              <%= film.year %>
              </p></small>

              <small class="text-body-secondary"><p>
               <strong>Length film:</strong>
              <%= film.length_film %>
               </p></small>
              </div>
            </div>
          </div>
        </div>
</main>
<div id="<%= dom_id film %>">
  

</div>
